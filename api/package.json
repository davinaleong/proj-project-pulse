{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:docker:start": "docker compose up db_test -d",
    "test:docker:stop": "docker compose down db_test",
    "test:docker:reset": "docker compose down db_test -v && docker compose up db_test -d",
    "test:setup": "cross-env DATABASE_URL=\"postgresql://postgres:postgres@localhost:5433/project_pulse_test\" npx prisma migrate deploy",
    "test:docker": "npm run test:docker:start && timeout /t 5 && npm run test:setup && npm run test && npm run test:docker:stop",
    "test:docker:container": "docker compose run --rm test",
    "test:ci": "docker compose up db_test -d && timeout /t 5 && npm run test:setup && npm run test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
